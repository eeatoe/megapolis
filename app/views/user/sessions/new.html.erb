<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 font-primary text-center text-3xl/9 font-bold tracking-tight text-gray-900">Войдите в аккаунт</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" action="#" method="POST">
      <!-- Поле Email -->
      <div>
        <%= label_tag :email, "Email адрес", class: "block text-sm font-secondary text-secondary-element font-medium text-gray-900" %>
        <div class="mt-2">
          <%= text_field_tag :email, nil, placeholder: "example@gmail.com", class: "block w-full h-11 pl-5 px-6 py-2 font-secondary rounded-full bg-border text-base text-gray-900 placeholder:text-gray-400 focus:outline-none focus:text-teal-600 hover:text-teal-600", autocomplete: "email", required: true %>
        </div>
      </div>

      <!-- Поле Password -->
      <div>
        <div class="flex items-center justify-between">
          <%= label_tag :password, "Пароль", class: "block text-sm font-secondary text-secondary-element font-medium text-gray-900" %>
          <div class="text-sm">
            <%= link_to "Забыли пароль?", "#", class: "font-secondary font-bold text-teal-400 hover:text-teal-300" %>
          </div>
        </div>
        <div class="mt-2">
          <%= text_field_tag :password, nil, placeholder: "145F2!k47", class: "block w-full h-11 pl-5 px-6 py-2 font-secondary rounded-full bg-border text-base text-gray-900 placeholder:text-gray-400 focus:outline-none focus:text-teal-600 hover:text-teal-600", autocomplete: "email", required: true %>
        </div>
      </div>

      <!-- Кнопка Login -->
      <div>
        <button type="submit" class="flex w-full h-11 pl-5 px-6 py-2 justify-center rounded-full bg-teal-400 text-sm/6 font-bold text-white shadow-xs hover:bg-teal-300 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-300">Войти</button>
      </div>
    </form>

    <p class="mt-10 font-secondary text-center text-sm/6 text-gray-500">
      Нет аккаунта?
      <a href="#" class="font-bold font-secondary text-teal-400 hover:text-teal-300">Зарегистрироваться</a>
    </p>
  </div>
</div>