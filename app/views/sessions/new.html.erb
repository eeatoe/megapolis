<div class="flex h-screen flex-col justify-center items-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-3xl font-bold tracking-tight">Войдите в аккаунт</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <!-- Форма входа -->
    <%= form_with model: @user, url: sessions_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <!-- Поле Email -->
      <div>
        <%= form.label :email, "Email адрес", class: "block text-sm font-secondary font-medium text-rock-800" %>
        <div class="mt-2">
          <%= form.email_field :email, placeholder: "example@gmail.com", class: "block w-full h-12 px-6 font-secondary rounded-full bg-rock-100 text-base text-rock-800 placeholder:text-rock-400 focus:outline-none focus:text-accent-600 hover:text-accent-600", autocomplete: "email", required: true %>
        </div>
      </div>

      <!-- Поле Password -->
      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, "Пароль", class: "block text-sm font-secondary font-medium text-rock-800" %>
          <div class="text-sm">
            <%= link_to "Забыли пароль?", "#", class: "font-secondary font-bold text-teal-400 hover:text-teal-300" %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, placeholder: "Твой пароль...", class: "block w-full h-12 px-6 font-secondary rounded-full bg-rock-100 text-base text-rock-800 placeholder:text-rock-400 focus:outline-none focus:text-accent-600 hover:text-accent-600", autocomplete: "current-password", required: true %>
        </div>
      </div>

      <!-- Кнопка Login -->
      <div>
        <%= form.submit "Войти", class: "flex items-center justify-center noise w-full h-12 px-6 rounded-full bg-rock-800 text-lg/6 font-bold text-snow shadow-xs hover:bg-accent-600" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm/6">
      Нет аккаунта?
      <%= link_to new_user_path, method: :post, class: "font-bold font-secondary text-teal-400 hover:text-teal-300" do %>
        Зарегистрироваться
      <% end %>
    </p>
  </div>

  <!-- Отображение ошибки -->
  <%= render "shared/flash_error_message" %>
</div>
